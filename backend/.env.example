# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tana_flags
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tana_flags
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_POOL_MAX=20
DB_POOL_MIN=2

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# API Keys
API_KEY_SECRET=your_api_key_encryption_secret_change_this_min_32_chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_EVALUATION_MAX=1000  # Higher limit for evaluation endpoint

# Caching
CACHE_TTL_SECONDS=60
CACHE_ENABLED=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
BCRYPT_ROUNDS=10

# Feature Toggles (meta!)
ENABLE_AUDIT_LOGS=false
ENABLE_WEBHOOKS=false
ENABLE_ANALYTICS=false
